{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "out",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "strict": true,
    "baseUrl": "src",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "exclude": ["node_modules", "tmp", "temp"],
    "include": ["src/**/*.ts"]
  }
}
